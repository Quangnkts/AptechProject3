@model IEnumerable<Aptitude.Models.CV>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}
@section CSS{
    <link rel="stylesheet" href="~/css/thanhcss.css">
}

<!--section.rp-cv-->
<section class="rp-cv">
    <!--container-->
    <div class="container">
        <!--row-->
        <div class="row">
            <div class="col-lg-12" style="text-align:center">
                <h1 style="color:orangered">CV</h1>
            </div>
        </div><!--/.row-->
        <!--row-->
        <div class="row">
            <div class="col-lg-9"></div>
            <div class="col-lg-2">
                <button onclick="window.print()">Print this page</button>
            </div>
            <div class="col-lg-1"></div>
        </div><!--/.row-->
        <br />
        <!--row-->
        <div class="row">
            <!--col-lg-12-->
            <div class="col-lg-12">
                <!--card-->
                <div class="card">
                    <!--card-header-->
                    <div class="card-header">
                        <!--form-->
                        @using (Html.BeginForm())
                        {
                            <input type="date" name="search" />
                            <input type="submit" value="Filter" class="btn-warning" />
                        }<!--/.form-->
                    </div>  <!--/.card-header-->
                    <!--card-body-->
                    <div class="card-body">
                        <!--table-->
                        <table class="table" id="table1">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Full Name</th>
                                    <th>Email</th>
                                    <th>Experience</th>
                                    <th>University</th>
                                    <th>Department</th>
                                    <th>Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.FirstName @item.LastName</td>
                                        <td>@item.Email</td>
                                        <td>@item.Experience</td>
                                        <td>@item.University</td>
                                        @foreach (var item1 in ViewBag.Depart)
                                        {
                                            if (item.DepartmentId == item1.Id)
                                            {
                                                <td>@item1.Name</td>
                                            }
                                        }
                                        <td>@item.DateCV.ToShortDateString()</td>
                                    </tr>
                                }
                            </tbody>
                        </table><!--/.table-->
                    </div><!--/.card-body-->
                </div> <!--/.card-->
            </div> <!--/.col-lg-12-->
        </div><!--/.row-->
    </div> <!--/.container-->
</section><!--/.section.rp-cv-->
@section Scripts{
    <script src="~/js/thanhjs.js"></script>
}
